<mvc:View
    controllerName="nadzeya.kireyenka.app.controller.ProductsOverviewPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <f:DynamicPage
        preserveHeaderStateOnScroll="true"
        fitContent="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>ProductsOverviewTitle}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar useToolbar="false">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem name="Name" label="{i18n>Name}" groupName="productFiltersGroup" visibleInFilterBar="true">
                                <fb:control>
                                    <Input 
                                        name="Name"
                                        placeholder="{i18n>ProductNamePlaceholder}" 
                                        showClearIcon="true" 
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem name="Category" label="{i18n>Category}" groupName="productFiltersGroup" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox
                                        name="Category"                                  
                                        placeholder="{i18n>CategoryPlaceholder}" 
                                        items="{categories>/}"
                                    >
                                        <core:Item key="{key}" text="{categories>Name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem name="Suppliers" label="{i18n>Suppliers}" groupName="productFiltersGroup" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiInput     
                                        name="Suppliers"                         
                                        placeholder="{i18n>SuppliersPlaceholder}"
                                        showClearIcon="true"
                                        showSuggestion="true"
                                        showValueHelp="false"
                                        suggestionItems="{suppliers>/}">
                                            <suggestionItems>
                                                <core:Item text="{suppliers>Name}" />
                                            </suggestionItems>
                                    </MultiInput>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem name="ReleaseDate" label="{i18n>ReleaseDate}" groupName="productFiltersGroup" visibleInFilterBar="true">
                                <fb:control>
                                    <DateRangeSelection 
                                        id="idReleaseDateDateRangeSelection" 
                                        placeholder="{i18n>ReleaseDatePlaceholder}">
                                    </DateRangeSelection>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                id="idProductsTable"
                items="{products>/}"
                mode="MultiSelect"
                multiSelectMode="ClearAll"
                autoPopinMode="true"
                sticky="ColumnHeaders"
                noDataText="{i18n>ProductsNotFound}"
                selectionChange="onTableSelectionChange"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="{i18n>Products}"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            text="{i18n>Create}"
                            type="Emphasized"
                            icon="sap-icon://add"
                        />
                        <Button
                            text="{i18n>Delete} {= ${productsOverviewView>/selectedProducts}.length > 0 ? '(' + ${productsOverviewView>/selectedProducts}.length + ')' : ''}"
                            icon="sap-icon://delete"
                            type="Transparent"
                            enabled="{= !!${productsOverviewView>/selectedProducts}.length}" 
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column importance="High">
                        <Text text="{i18n>Name}" />
                    </Column>

                    <Column
                        importance="High"
                        hAlign="End"
                        width="7rem"
                    >
                        <Text text="{i18n>Price}" />
                    </Column>

                    <Column
                        importance="Low"
                        autoPopinWidth="20"
                    >
                        <Text text="{i18n>Description}" />
                    </Column>

                    <Column
                        importance="Medium"
                        autoPopinWidth="10"
                        width="7rem"
                    >
                        <Text text="{i18n>ReleaseDate}" />
                    </Column>

                    <Column
                        importance="Medium"
                        autoPopinWidth="10"
                        width="7rem"
                    >
                        <Text text="{i18n>Rating}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onColumnListItemPress"
                        highlight="{= ${products>DiscountDate} ? 'Success' : 'None'}"
                    >
                        <ObjectIdentifier title="{products>Name}" />
                        <ObjectNumber
                            state="{= ${products>DiscountDate} ? 'Success' : 'None'}"
                            number="{
                            parts: ['products>Price'],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {currencyCode : false, groupingSeparator: ' ', decimals: 0 }
                        }"
                            unit="USD"
                        />
                        <Text
                            text="{products>Description}"
                            wrapping="false"
                        />
                        <Text
                            text="{products>ReleaseDate}"
                            wrapping="false"
                        />
                        <RatingIndicator
                            value="{products>Rating}"
                            iconSize="15px"
                            editable="false"
                        />
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
