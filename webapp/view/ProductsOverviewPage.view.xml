<mvc:View
    controllerName="nadzeya.kireyenka.app.controller.ProductsOverviewPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    height="100%"
>
    <f:DynamicPage
        preserveHeaderStateOnScroll="true"
        fitContent="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="LeverX Warehouse" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <Table
                id="idProductsTable"
                items="{products>/}"
                mode="MultiSelect"
                multiSelectMode="ClearAll"
                autoPopinMode="true"
                sticky="ColumnHeaders"
                noDataText="{i18n>ProductsNotFound}"
                selectionChange="onTableSelectionChange"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Products"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            text="Create"
                            type="Emphasized"
                            icon="sap-icon://add"
                        />
                        <Button
                            text="Delete {= ${productsOverviewView>/selectedProducts}.length > 0 ? '(' + ${productsOverviewView>/selectedProducts}.length + ')' : ''}"
                            icon="sap-icon://delete"
                            type="Transparent"
                            enabled="{= !!${productsOverviewView>/selectedProducts}.length}" 
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column importance="High">
                        <Text text="Name" />
                    </Column>

                    <Column
                        importance="High"
                        hAlign="End"
                        width="7rem"
                    >
                        <Text text="Price" />
                    </Column>

                    <Column
                        importance="Low"
                        autoPopinWidth="20"
                    >
                        <Text text="Description" />
                    </Column>

                    <Column
                        importance="Medium"
                        autoPopinWidth="10"
                        width="7rem"
                    >
                        <Text text="Release Date" />
                    </Column>

                    <Column
                        importance="Medium"
                        autoPopinWidth="10"
                        width="7rem"
                    >
                        <Text text="Rating" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onColumnListItemPress"
                        highlight="{= ${products>DiscountDate} ? 'Success' : 'None'}"
                    >
                        <ObjectIdentifier title="{products>Name}" />
                        <ObjectNumber
                            state="{= ${products>DiscountDate} ? 'Success' : 'None'}"
                            number="{
                            parts: ['products>Price'],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {currencyCode : false, groupingSeparator: ' ', decimals: 0 }
                        }"
                            unit="USD"
                        />
                        <Text
                            text="{products>Description}"
                            wrapping="false"
                        />
                        <Text
                            text="{products>ReleaseDate}"
                            wrapping="false"
                        />
                        <RatingIndicator
                            maxValue="5"
                            value="{products>Rating}"
                            iconSize="15px"
                            editable="false"
                        />
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
